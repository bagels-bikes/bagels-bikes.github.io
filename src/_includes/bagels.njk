---
layout: /base2.njk
---

{% macro bubble(firstLetter, text) %}
<div class="w-full max-w-xs overflow-hidden rounded-lg bg-gray-200 m-1">
    <div class="px-4 text-left">
        <span class="text-xl font-bold text-black mr-0">{{ firstLetter }}</span>
        <span class="text-lg font-bold text-gray-800 ml-0"> {{ text }}</span>
    </div>
</div>
{% endmacro %}

{% macro createSemester(semester, hidden=true)%}
<div class="outline outline-white">
    <label class="block">
    <input type="checkbox" class="peer hidden" {% if hidden %} {% else %} checked {% endif %}/>

    <span class="inline-block cursor-pointer bg-gray-200 px-4 py-2 text-black font-bold text-center transition hover:bg-gray-50 peer-checked:bg-gray-100">
        <span class="peer-checked:hidden"> {{semester.name}}</span>
        <span class="hidden peer-checked:inline"> {{semester.name}}</span>
    </span>
    <div class="w-full hidden peer-checked:block" >
    <table 
        class="w-full text-sm text-left rtl:text-right text-gray-500 overflow-x-auto"
        >
        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Date
                </th>
                <th scope="col" class="px-6 py-3">
                    Speaker
                </th>
                <th scope="col" class="px-6 py-3">
                    Title
                </th>
                <th scope="col" class="px-6 py-3 min-w-md">
                    Abstract
                </th>
            </tr>
        </thead>
        <tbody>
            {% for talk in semester.talks %}
                <tr class="bg-gray-50 border-b border-gray-200">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900">
                        {{ talk.date }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900">
                        {{ talk.name }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900">
                        {{ talk.title }}
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900">
                        {{ talk.abstract }}
                    </th>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </label>
</div>
{% endmacro %}

<header class="bg-white mb-auto">
<div class="container px-4 py-16 mx-auto">
        <div class="items-center lg:flex">
            <div class="flex items-center justify-center h-20 w-full my-6 lg:mt-0 lg:w-1/2 text-4xl font-bold text-black text-center">
                Welcome to BAGELS!
            </div>
            <div class="flex flex-col items-center w-full">
                {{ bubble("B","est")}}
                {{ bubble("A","lgebraic")}}
                {{ bubble("G","eometry")}}
                {{ bubble("E","ating (&)")}}
                {{ bubble("L","earning")}}
                {{ bubble("S","eminar")}}
            </div>
    </div>
</div>
</header>

<header class="bg-gray-100 p-10">
    {{ content | safe }}
</header>

<header class="bg-gray-100">
<div class="container flex flex-wrap">

{{ createSemester(currentSemester, false) }}

{% for semester in semesters %}
{{ createSemester(semester) }}
{% endfor %}

</div>
</header>