---
layout: base.njk
---

{% macro button(title, subtitle) %}
<a href="#" class="w-full max-w-xl overflow-hidden rounded-lg bg-gray-200 m-4">
    <div class="py-5 text-center">
        <p class="block text-xl font-bold text-black" tabindex="0" role="link"> {{ title }}</p>
        <span class="text-sm text-gray-800">{{ subtitle }}</span>
    </div>
</a>
{% endmacro %}


<div class="flex flex-col h-screen">

<header class="bg-white mb-auto">
    <div class="container px-4 py-16 mx-auto">
        <div class="items-center lg:flex">
            <div class="flex items-center justify-center w-full mt-6 lg:mt-0 lg:w-1/2">
                <img class="w-full h-full max-w-md" src="{{ '/assets/img/logo.png' | url }}" alt="bike with bagel wheels">
            </div>

            <div class="w-full lg:w-1/2 flex flex-col items-center px-2">
                    
                    {{ button("BAGELS", "Algebraic Geometry")}}
                    {{ button("BIKES", "Commutative Algebra")}}
                    
            </div>
        </div>
    </div>
</header>

<div class="bg-gray-200">
    <div class="container px-4 py-16 text-center">
        Graduate student seminars on algebraic geometry and commutative algebra at the University of Utah. Come give a talk!
    </div>
</div>

            
<footer class="bg-gray-400">
    <div class="container flex flex-col items-center justify-between p-6 mx-auto space-y-4 sm:space-y-0 sm:flex-row">
        <a href="https://www.math.utah.edu/">
            <img class="w-auto h-10" src="{{'assets/img/uu.svg' | url}}" alt="University of Utah logo">
        </a>

        

        <div class="flex -mx-2">
            <a href="https://www.math.utah.edu/research/ag/" class="mx-2 text-gray-800 transition-colors duration-300 hover:text-blue-500" aria-label="Reddit">
                Algebraic Geometry
            </a>

            <a href="https://www.math.utah.edu/research/ca/index.html" class="mx-2 text-gray-800 transition-colors duration-300 hover:text-blue-500" aria-label="Facebook">
                Commutative Algebra
            </a>
        </div>
    </div>
</footer>

</div>