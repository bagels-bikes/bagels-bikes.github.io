---
layout: base.njk
---

{% macro button(title, subtitle, link) %}
<a href="{{ link | safe}}" class="w-full max-w-xl overflow-hidden rounded-lg bg-gray-200 m-4">
    <div class="py-5 text-center">
        <p class="block text-xl font-bold text-black" tabindex="0" role="link"> {{ title }}</p>
        <span class="text-sm text-gray-800">{{ subtitle }}</span>
    </div>
</a>
{% endmacro %}


<header class="bg-white mb-auto">
    <div class="container px-4 py-16 mx-auto">
        <div class="items-center lg:flex">
            <div class="flex items-center justify-center w-full mt-6 lg:mt-0 lg:w-1/2">
                <img class="w-full h-full max-w-md" src="{{ '/assets/img/logo.png' | url }}" alt="bike with bagel wheels">
            </div>

            <div class="w-full lg:w-1/2 flex flex-col items-center px-2">
                    
                    {{ button("BAGELS", "Algebraic Geometry", "/bagels")}}
                    {{ button("BIKES", "Commutative Algebra", "/bikes")}}
                    
            </div>
        </div>
    </div>
</header>

<div class="bg-gray-200">
    <div class="container px-4 py-16 text-center">
        <p>
            Graduate student seminars on algebraic geometry and commutative algebra at the University of Utah. Come give a talk!
        </p>
        <p>
            Email me at "<code>jsullivan ~at~ math.utah.edu</code>" for more info.
        </p>
    </div>
</div>

